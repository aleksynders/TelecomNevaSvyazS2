<Application x:Class="TelecomNevaSvyazS2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TelecomNevaSvyazS2"
             StartupUri="/Windows/MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate x:Key="MenuButon" TargetType="Button">
            <Border CornerRadius="40" BorderBrush="Black" BorderThickness="1" Background="{TemplateBinding Background}">
                <ContentControl Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
    </Application.Resources>
</Application>
